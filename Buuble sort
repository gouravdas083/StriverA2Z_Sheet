  for (int i = 0; i < n - 1; i++)
	{
        int DidSwap=0;
		for (int j = 0; j < n - i - 1; j++)
		{
			// If jth element is greater than 'j + 1' th element
			// swap them
			if (arr[j] > arr[j + 1])
			{
				int tmp = arr[j+1];
				arr[j+1] = arr[j];
				arr[j] = tmp;
                DidSwap=1;
			}
		}
        if(DidSwap==0){
            break;
        }
	}
